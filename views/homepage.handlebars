
{{#each posts as |post|}}
  <div class="post">{{> post-details}}</div>
{{/each}}

<script src='/js/comment.js'></script>
<script>
  const posts = document.querySelectorAll('div.post')
  posts.forEach((post)=>{
    post.addEventListener('click', function() {
      postClickHandler(post.firstElementChild.getAttribute('data-post-id'));
  })
  })
  
</script>